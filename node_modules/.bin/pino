#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/Volumes/DeepSpaceExtSDD/gnostr/hyper-nostr/node_modules/pino/node_modules:/Volumes/DeepSpaceExtSDD/gnostr/hyper-nostr/node_modules:/Volumes/DeepSpaceExtSDD/gnostr/node_modules:/Volumes/DeepSpaceExtSDD/node_modules:/Volumes/node_modules:/node_modules:/Volumes/DeepSpaceExtSDD/gnostr/hyper-nostr/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/Volumes/DeepSpaceExtSDD/gnostr/hyper-nostr/node_modules/pino/node_modules:/Volumes/DeepSpaceExtSDD/gnostr/hyper-nostr/node_modules:/Volumes/DeepSpaceExtSDD/gnostr/node_modules:/Volumes/DeepSpaceExtSDD/node_modules:/Volumes/node_modules:/node_modules:/Volumes/DeepSpaceExtSDD/gnostr/hyper-nostr/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../pino/bin.js" "$@"
else
  exec node  "$basedir/../pino/bin.js" "$@"
fi
